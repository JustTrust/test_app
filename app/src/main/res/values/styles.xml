<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="android:Theme.DeviceDefault.Light">
        <item name="android:windowBackground">@drawable/bg</item>
    </style>


    <style name="FullScreenTheme" parent="NoTitleTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="NoTitleTheme" parent="AppBaseTheme">
        <item name="android:textAppearance">@style/TextAppearanceThin</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="TextAppearanceThin" parent="@android:style/TextAppearance">
        <!--<item name="android:fontFamily">helvetica neue</item>-->
    </style>

    <!--from sample-->
    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TextHeaderStyle" parent="TextAppearanceThin">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/home_background_color</item>
    </style>

    <style name="TextContentStyle" parent="TextAppearanceThin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/five_dp_margin</item>
        <item name="android:layout_marginRight">@dimen/five_dp_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>

    <style name="TextSettingStyle" parent="TextAppearanceThin">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="NumericEditTextStyle" parent="TextAppearanceThin">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:gravity">right</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">2</item>
        <item name="android:hint">in mins</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/editText_font</item>
        <item name="android:textColor">@color/home_background_color</item>
    </style>

    <style name="PhoneNumericEditTextStyle" parent="TextAppearanceThin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:gravity">right</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">15</item>
        <item name="android:hint">Phone Number</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/editText_font</item>
        <item name="android:textColor">@color/home_background_color</item>
    </style>

    <style name="BigContentStyle" parent="TextAppearanceThin">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/play_text_color</item>
    </style>

    <style name="StatusContentStyle" parent="TextAppearanceThin">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_status</item>
        <item name="android:textColor">@color/play_text_color</item>
    </style>

    <style name="ButtonSettingStyle" parent="TextAppearanceThin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/button_margin</item>
        <item name="android:layout_marginRight">@dimen/button_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/ten_dp_margin</item>

        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextTitleSettingStyle" parent="TextAppearanceThin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/home_background_color</item>
    </style>

    <style name="SettingTitleStyle" parent="TextAppearanceThin">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/home_background_color</item>
    </style>


    <style name="TextTitleSettingDeviderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>

        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/home_background_color</item>
    </style>


    <style name="TextMinSettingStyle" parent="TextAppearanceThin">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/five_dp_margin</item>
        <item name="android:layout_marginRight">@dimen/five_dp_margin</item>
        <item name="android:textSize">@dimen/editText_font</item>
        <item name="android:text">@string/min</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="TextHintSettingStyle" parent="TextAppearanceThin">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/editText_font</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/home_background_color</item>
        <item name="android:textColorHint">@color/light_gray</item>
    </style>

</resources>