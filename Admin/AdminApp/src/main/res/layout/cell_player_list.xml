<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_deviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        tools:text="aaaa"
        android:textSize="@dimen/font_size_middle"/>

    <TextView
        android:id="@+id/txt_deviceId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_deviceName"
        tools:text="id:1234567890"
        android:textSize="@dimen/font_size_small"/>

    <TextView
        android:id="@+id/txt_connStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/toggle_GPS"
        android:layout_centerVertical="true"
        tools:text="Disconnecdted"
        android:textSize="@dimen/font_size_normal"/>

    <ToggleButton
        android:id="@+id/toggle_GPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
